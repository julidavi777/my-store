<%-include('../templates/header.ejs') %>

<div class="flex justify-center items-center min-h-screen">
    <div class="bg-white p-8 rounded-md shadow-md w-full sm:w-96">

      <!-- Logo -->
      <div class="flex justify-center mb-6">
        <img src="tu_logo.png" alt="Logo Tienda Online" class="w-24 h-24">
      </div>

      <!-- Formulario de inicio de sesión -->
      <form>
        
        <div class="mb-4">
          <label for="name" class="block text-gray-700 font-semibold">Nombres</label>
          <input type="text" id="name" class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-blue-500 focus:bg-white focus:ring-0" required>
        </div>

        <div class="mb-4">
          <label for="lastname" class="block text-gray-700 font-semibold">Apellidos</label>
          <input type="text" id="lastname" class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-blue-500 focus:bg-white focus:ring-0" required>
        </div>
        <div class="mb-4">
          <label for="address" class="block text-gray-700 font-semibold">Dirección</label>
          <input type="text" id="address" class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-blue-500 focus:bg-white focus:ring-0" required>
        </div>

        <div class="mb-4">
          <label for="email" class="block text-gray-700 font-semibold">Correo electrónico</label>
          <input type="email" id="email" class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-blue-500 focus:bg-white focus:ring-0" required>
        </div>

        <div class="mb-6">
          <label for="password" class="block text-gray-700 font-semibold">Contraseña</label>
          <input type="password" id="password" class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-blue-500 focus:bg-white focus:ring-0" required>
        </div>

        <div class="mb-6 bg-orange-500 ">
          <button type="submit" class="w-full bg-orange-500 text-white px-4 py-2 rounded-md font-semibold">Iniciar sesión</button>
        </div>

        <div class="text-center">
          <a href="#" class="text-blue-500 hover:underline">¿Ya tienes cuenta? haz click aqui!</a>
        </div>
      </form>

    </div>
  </div>


<%-include('../templates/footer.ejs') %>